<div class="header">
  <div class="logo"><h1>Disc Golf<br>Scorecard</h1></div>
  <div class="weather"></div>
</div>

<div class="creategame">
  <% if current_user %>
    <p>
      You are signed in as <%= current_user.username %>.
    </p>
    <%= link_to "Create New Game", new_game_path %><br>
    <%= link_to "Log Out", log_out_path, method: :delete %>
  <% else %>
  <div class="login-signup">
    <%= link_to "Log In", log_in_path %>
    <%= link_to "Sign Up", users_new_path %>
  </div>
  <% end %>
</div>


<div class="footer"></div>
