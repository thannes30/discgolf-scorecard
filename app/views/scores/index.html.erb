<div class="header">
  <div class="logo"><h1>Disc Golf<br>Scorecard</h1></div>
  <div class="weather"></div>
</div>

<div class="showscores">
    <div class="displayname">
      <h4><%= current_user.username.upcase %> Scores</h4>
    </div>

  <div class="table">
  <table>
    <div class="headers">
    <tr>
      <th>Date</th>
      <th>Course</th>
      <th>Score</th>
      <th>Weather</th>
    </tr>
  </div>
      <% unless @scores.nil? %>
      <% @scores.each do |score| %>
    <tr>
      <div class="column">
        <td class="tablecolumn">
          <%= score.created_at.strftime("%b %d 20%y") %>
        </td>
      </div>
      <div class="column">
        <td class="tablecolumn">
          <% if score.game %>
            <%= score.game.course %>
          <% end %>
        </td>
      </div>
      <div class="column">
        <td class="tablecolumn">
          <%= score.total_score.sum %>
        </td>
      </div>
      <div class="column">
      <td class="tablecolumn">
        <p><%= @game.weather %><br>
        <%= @game.temperature %>&deg<br>
        <%= @game.wind %> mph</p>
      </td>
    </div>
     </tr>
     <% end %>
    <% end %>
  </table>
  </div>
</div>


